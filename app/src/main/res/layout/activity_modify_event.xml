<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/modifEventImage"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/backgrounds/scenic[7]"
            android:onClick="changeImage"/>

        <EditText
            android:id="@+id/modifEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="Event Name Here"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="24dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <EditText
            android:id="@+id/modifEventDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="Event Description"
            android:inputType="textMultiLine"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="6dp"/>

        <!--Keterangan Event-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="11dp"
            app:cardCornerRadius="4dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/modifEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:background="#fff"
                    android:drawableStart="@drawable/calendar"
                    android:drawablePadding="10dp"
                    android:hint="Event Date"
                    android:focusable="false"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDetailPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.275" />

                <EditText
                    android:id="@+id/modifEventPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="#fff"
                    android:drawableStart="@drawable/money"
                    android:drawablePadding="10dp"
                    android:hint="Event Price"
                    android:inputType="numberDecimal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addEventDate" />

                <EditText
                    android:id="@+id/modifEvenLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#fff"
                    android:drawableStart="@drawable/map"
                    android:drawablePadding="10dp"
                    android:hint="Event Venue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/addEventDate"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.24" />

                <EditText
                    android:id="@+id/modifEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#fff"
                    android:drawableStart="@drawable/group"
                    android:drawablePadding="10dp"
                    android:hint="Event Type"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/addEventPrice" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <!--Contact Person-->

        <android.support.v7.widget.CardView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="166dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Person"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                <!--Horizontal Phone and Email-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="25dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/contact"/>

                    <EditText
                        android:id="@+id/modifEventPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:hint="Phone Number"
                        android:layout_gravity="center_vertical"
                        android:inputType="phone"
                        android:layout_marginLeft="29dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="25dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/gmail"/>

                    <EditText
                        android:id="@+id/modifEventMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:hint="Email"
                        android:layout_gravity="center_vertical"
                        android:inputType="textEmailAddress"
                        android:layout_marginLeft="29dp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="166dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                <EditText
                    android:id="@+id/modifEventAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:hint="Event Address"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="6dp"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_margin="8dp"
                android:id="@+id/btnModifEvent"
                android:layout_width="148dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:text="MODIFY EVENT"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <Button
                android:layout_margin="8dp"
                android:id="@+id/btnRemoveEvent"
                android:layout_width="148dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_red"
                android:gravity="center"
                android:text="REMOVE EVENT"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

        </LinearLayout>



    </LinearLayout>

</ScrollView>